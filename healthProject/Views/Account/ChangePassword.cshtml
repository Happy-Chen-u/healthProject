@model ChangePasswordViewModel
@{
    ViewData["Title"] = "變更密碼";
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 代謝症候群管理系統</title>
    <style>
        :root {
            --primary-color: #06b6d4;
            --primary-dark: #0891b2;
            --success-color: #10b981;
            --danger-color: #ef4444;
            --text-dark: #1e293b;
            --text-gray: #64748b;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            background: linear-gradient(135deg, #FFFCEC 0%, #FFF8DC 100%);
            min-height: 100vh;
            font-family: 'Microsoft JhengHei', 'Segoe UI', Arial, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
        }

        .container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            width: 100%;
            max-width: 500px;
            overflow: hidden;
        }

        .header {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            color: white;
            padding: 2rem 1.5rem;
            text-align: center;
        }

        .header-icon {
            font-size: 3rem;
            margin-bottom: 0.75rem;
        }

        .header-title {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .header-subtitle {
            font-size: 0.9rem;
            opacity: 0.95;
        }

        .content {
            padding: 2rem 1.5rem;
        }

        .user-info {
            background: #f1f5f9;
            padding: 1rem;
            border-radius: 12px;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .user-info-label {
            color: var(--text-gray);
            font-size: 0.85rem;
            margin-bottom: 0.25rem;
        }

        .user-info-value {
            color: var(--text-dark);
            font-weight: 600;
            font-size: 1.1rem;
        }

        .alert {
            padding: 1rem;
            border-radius: 12px;
            margin-bottom: 1.5rem;
            font-size: 0.9rem;
        }

        .alert-danger {
            background: #fee2e2;
            color: #991b1b;
            border: 1px solid #fecaca;
        }

        .alert-success {
            background: #d1fae5;
            color: #065f46;
            border: 1px solid #6ee7b7;
        }

        .form-group {
            margin-bottom: 1.25rem;
        }

        .form-label {
            display: block;
            color: var(--text-dark);
            font-weight: 600;
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }

        .input-wrapper {
            position: relative;
        }

        .form-control {
            width: 100%;
            padding: 0.875rem 3rem 0.875rem 1rem;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.3s ease;
            font-family: inherit;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(6, 182, 212, 0.1);
        }

        .password-toggle {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            font-size: 1.25rem;
            cursor: pointer;
            color: var(--text-gray);
            padding: 0.25rem;
        }

        .text-danger {
            color: var(--danger-color);
            font-size: 0.85rem;
            margin-top: 0.25rem;
            display: block;
        }

        .password-requirements {
            background: #f8fafc;
            padding: 1rem;
            border-radius: 12px;
            margin-bottom: 1.5rem;
            font-size: 0.85rem;
        }

        .password-requirements-title {
            color: var(--text-dark);
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .requirement-item {
            color: var(--text-gray);
            margin-bottom: 0.25rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .requirement-icon {
            color: var(--success-color);
        }

        .button-group {
            display: flex;
            gap: 0.75rem;
            margin-top: 1.5rem;
        }

        .btn {
            flex: 1;
            padding: 1rem;
            border: none;
            border-radius: 12px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            color: white;
            box-shadow: 0 4px 15px rgba(6, 182, 212, 0.3);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(6, 182, 212, 0.4);
        }

        .btn-secondary {
            background: #64748b;
            color: white;
        }

        .btn-secondary:hover {
            background: #475569;
            transform: translateY(-2px);
        }

        .btn:active {
            transform: scale(0.98);
        }

        .footer-note {
            text-align: center;
            padding: 1.5rem;
            border-top: 1px solid #e2e8f0;
            background: #fafafa;
            color: var(--text-gray);
            font-size: 0.85rem;
        }

        /* 平板 */
        @@media (min-width: 768px) {
            
            .container {
                max-width: 700px;
            }
            
            .mobile-container {
                padding: 2rem;
            }

            .main-card {
                max-width: 700px;
            }

            .header-section {
                padding: 3rem 2rem;
            }

            .system-icon {
                font-size: 5rem;
            }

            .system-title {
                font-size: 2rem;
            }

            .system-subtitle {
                font-size: 1.1rem;
            }

            .content-section {
                padding: 2.5rem 2rem;
            }

            .features-section {
                gap: 1.25rem;
            }

            .feature-card {
                padding: 1.5rem;
            }

                .feature-card:hover {
                    transform: translateY(-3px);
                    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
                }
        }

        /* 桌機 */
        @@media (min-width: 1024px) {

            .container {
                max-width: 900px;
            }

            .main-card {
                max-width: 900px;
            }

            .features-section {
                display: grid;
                grid-template-columns: repeat(3, 1fr);
                gap: 1.5rem;
            }

            .feature-card {
                flex-direction: column;
                text-align: center;
                padding: 2rem 1.5rem;
            }

            .feature-icon {
                font-size: 3rem;
                margin-bottom: 0.5rem;
            }
        }

        /* 避免內容溢出 */
        .main-card {
            overflow: visible;
        }

        /* 確保在小螢幕上也能完整顯示 */
        @@media (max-height: 700px) {
            .mobile-container {
                min-height: auto;
            }

            .system-icon {
                font-size: 3rem;
                margin-bottom: 0.5rem;
            }

            .header-section {
                padding: 1.5rem 1rem;
            }

            .content-section {
                padding: 1.5rem 1rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <div class="header-icon">🔐</div>
            <h1 class="header-title">變更密碼</h1>
            <p class="header-subtitle">請輸入目前密碼及新密碼</p>
        </div>

        <div class="content">
            <div class="user-info">
                <div class="user-info-label">目前登入帳號</div>
                <div class="user-info-value">@User.Identity.Name</div>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <div asp-validation-summary="All"></div>
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    ✅ @TempData["SuccessMessage"]
                </div>
            }

            <form asp-action="ChangePassword" asp-controller="Account" method="post">
                @Html.AntiForgeryToken()

                <!-- 目前密碼 -->
                <div class="form-group">
                    <label asp-for="OldPassword" class="form-label">目前密碼</label>
                    <div class="input-wrapper">
                        <input asp-for="OldPassword"
                               type="password"
                               class="form-control"
                               id="oldPassword"
                               placeholder="請輸入目前密碼"
                               autofocus
                               required />
                        <button type="button" class="password-toggle" onclick="togglePassword('oldPassword', this)">👁️</button>
                    </div>
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>

                <!-- 新密碼 -->
                <div class="form-group">
                    <label asp-for="NewPassword" class="form-label">新密碼</label>
                    <div class="input-wrapper">
                        <input asp-for="NewPassword"
                               type="password"
                               class="form-control"
                               id="newPassword"
                               placeholder="請輸入新密碼"
                               required />
                        <button type="button" class="password-toggle" onclick="togglePassword('newPassword', this)">👁️</button>
                    </div>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <!-- 確認新密碼 -->
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="form-label">確認新密碼</label>
                    <div class="input-wrapper">
                        <input asp-for="ConfirmPassword"
                               type="password"
                               class="form-control"
                               id="confirmPassword"
                               placeholder="請再次輸入新密碼"
                               required />
                        <button type="button" class="password-toggle" onclick="togglePassword('confirmPassword', this)">👁️</button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- 密碼要求說明 -->
                <div class="password-requirements">
                    <div class="password-requirements-title">📋 密碼要求</div>
                    <div class="requirement-item">
                        <span class="requirement-icon">✓</span>
                        <span>至少 6 個字元</span>
                    </div>
                    <div class="requirement-item">
                        <span class="requirement-icon">✓</span>
                        <span>新密碼與確認密碼必須相同</span>
                    </div>
                </div>

                <!-- 按鈕組 -->
                <div class="button-group">
                    <a href="@Url.Action("Dashboard", "Home")" class="btn btn-secondary">
                        ← 取消
                    </a>
                    <button type="submit" class="btn btn-primary">
                        ✓ 確認變更
                    </button>
                </div>
            </form>
        </div>

        <div class="footer-note">
            💡 變更密碼後,會跳到登入頁面,請重新登入
        </div>
    </div>

    <script>
        function togglePassword(inputId, button) {
            const input = document.getElementById(inputId);
            if (input.type === 'password') {
                input.type = 'text';
                button.textContent = '🙈';
            } else {
                input.type = 'password';
                button.textContent = '👁️';
            }
        }

        // 即時驗證新密碼與確認密碼是否相同
        document.getElementById('confirmPassword')?.addEventListener('input', function() {
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = this.value;

            if (confirmPassword && newPassword !== confirmPassword) {
                this.style.borderColor = '#ef4444';
            } else {
                this.style.borderColor = '#e2e8f0';
            }
        });
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>