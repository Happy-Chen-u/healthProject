@model LoginViewModel
@{
    ViewData["Title"] = "登入";
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 代謝症候群管理系統</title>
    <style>
        :root {
            --primary-color: #06b6d4;
            --primary-dark: #0891b2;
            --danger-color: #ef4444;
            --text-dark: #1e293b;
            --text-gray: #64748b;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            background: linear-gradient(#FFFCEC 100%);
            min-height: 100vh;
            font-family: 'Microsoft JhengHei', 'Segoe UI', Arial, sans-serif;
        }

        .login-wrapper {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
        }

        .login-container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            width: 100%;
            max-width: 450px;
            overflow: hidden;
        }

        .login-banner {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            color: white;
            padding: 2rem 1.5rem;
            text-align: center;
        }

        .banner-icon {
            font-size: 3.5rem;
            margin-bottom: 1rem;
        }

        .banner-title {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .banner-subtitle {
            font-size: 0.9rem;
            opacity: 0.95;
        }

        .banner-features {
            display: none;
        }

        .login-form-section {
            padding: 2rem 1.5rem;
        }

        .form-title {
            font-size: 1.3rem;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .form-group {
            margin-bottom: 1.25rem;
        }

        .form-label {
            display: block;
            color: var(--text-dark);
            font-weight: 600;
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }

        .input-wrapper {
            position: relative;
        }

        .form-control {
            width: 100%;
            padding: 0.875rem 1rem 0.875rem 3rem;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.3s ease;
            font-family: inherit;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(6, 182, 212, 0.1);
        }

        .input-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            font-size: 1.25rem;
            color: var(--text-gray);
            pointer-events: none;
        }

        .password-toggle {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            font-size: 1.25rem;
            cursor: pointer;
            color: var(--text-gray);
            padding: 0.25rem;
            z-index: 10;
        }

        .form-check {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 1.5rem;
        }

        .form-check-input {
            width: 1.25rem;
            height: 1.25rem;
            cursor: pointer;
        }

        .form-check-label {
            color: var(--text-dark);
            font-size: 0.95rem;
            cursor: pointer;
        }

        .btn-login {
            width: 100%;
            padding: 1rem;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(6, 182, 212, 0.3);
        }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(6, 182, 212, 0.4);
        }

        .btn-login:active {
            transform: scale(0.98);
        }

        .alert {
            padding: 1rem;
            border-radius: 12px;
            margin-bottom: 1.5rem;
            font-size: 0.9rem;
            background: #fee2e2;
            color: #991b1b;
            border: 1px solid #fecaca;
        }

        .text-danger {
            color: var(--danger-color);
            font-size: 0.85rem;
            margin-top: 0.25rem;
            display: block;
        }

        .login-footer {
            padding: 1rem 1.5rem;
            background: #f8fafc;
            text-align: center;
            border-top: 1px solid #e2e8f0;
        }

        .back-link {
            color: var(--text-gray);
            text-decoration: none;
            font-size: 0.9rem;
            transition: color 0.3s ease;
        }

        .back-link:hover {
            color: var(--primary-color);
        }

        /* 平板以上 - 寬版設計 */
        @@media (min-width: 768px) {
            .login-container {
                max-width: 900px;
                display: grid;
                grid-template-columns: 1fr 1fr;
                grid-template-rows: auto 1fr auto;
            }

            .login-banner {
                grid-column: 1;
                grid-row: 1 / -1;
                padding: 3rem 2.5rem;
                text-align: left;
                display: flex;
                flex-direction: column;
                justify-content: center;
            }

            .banner-icon {
                font-size: 5rem;
                margin-bottom: 1.5rem;
            }

            .banner-title {
                font-size: 2rem;
                margin-bottom: 1rem;
            }

            .banner-subtitle {
                font-size: 1.1rem;
                margin-bottom: 2rem;
            }

            .banner-features {
                display: block;
                margin-top: 2rem;
            }

            .feature-item {
                display: flex;
                align-items: center;
                gap: 0.75rem;
                margin-bottom: 1rem;
                font-size: 0.95rem;
                opacity: 0.95;
            }

            .feature-icon {
                font-size: 1.5rem;
            }

            .login-form-section {
                grid-column: 2;
                grid-row: 1 / 3;
                padding: 3rem 2.5rem;
                display: flex;
                flex-direction: column;
                justify-content: center;
            }

            .login-footer {
                grid-column: 2;
                grid-row: 3;
            }
        }

        /* 桌機大螢幕 */
        @@media (min-width: 1200px) {
            .login-container {
                max-width: 1100px;
            }

            .login-banner {
                padding: 4rem 3rem;
            }

            .login-form-section {
                padding: 4rem 3rem;
            }
        }
    </style>
</head>
<body>
    <div class="login-wrapper">
        <div class="login-container">
            <!-- 左側橫幅 -->
            <div class="login-banner">
                <div class="banner-icon">🏥</div>
                <h1 class="banner-title">代謝症候群<br>管理系統</h1>
                <p class="banner-subtitle">智能追蹤・健康管理・專業照護</p>
                
                <div class="banner-features">
                    <div class="feature-item">
                        <span class="feature-icon">📊</span>
                        <span>完整的疾病個管紀錄</span>
                    </div>
                    <div class="feature-item">
                        <span class="feature-icon">📝</span>
                        <span>每日健康資訊追蹤</span>
                    </div>
                    <div class="feature-item">
                        <span class="feature-icon">📈</span>
                        <span>智能健康分析報告</span>
                    </div>
                </div>
            </div>

            <!-- 右側登入表單 -->
            <div class="login-form-section">
                <h2 class="form-title">登入系統</h2>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert">
                        <div asp-validation-summary="All"></div>
                    </div>
                }

                <form asp-action="Login" asp-controller="Account" method="post">
                    <input type="hidden" asp-for="@ViewData["ReturnUrl"]" />
                    
                    <div class="form-group">
                        <label asp-for="Username" class="form-label">帳號 (身分證字號)</label>
                        <div class="input-wrapper">
                            <span class="input-icon">👤</span>
                            <input asp-for="Username" class="form-control" placeholder="請輸入身分證字號" autofocus required />
                        </div>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="form-label">密碼</label>
                        <div class="input-wrapper">
                            <span class="input-icon">🔒</span>
                            <input asp-for="Password" type="password" class="form-control" id="passwordInput" placeholder="請輸入密碼" required />
                            <button type="button" class="password-toggle" onclick="togglePassword()">👁️</button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-check">
                        <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="rememberMe" />
                        <label asp-for="RememberMe" class="form-check-label" for="rememberMe">記住我</label>
                    </div>

                    <button type="submit" class="btn-login">
                        🔓 登入系統
                    </button>
                </form>
            </div>

            <!-- 底部 -->
            <div class="login-footer">
                <a asp-controller="Home" asp-action="Index" class="back-link">← 返回首頁</a>
            </div>
        </div>
    </div>

    <script>
        function togglePassword() {
            const input = document.getElementById('passwordInput');
            const btn = document.querySelector('.password-toggle');
            if (input.type === 'password') {
                input.type = 'text';
                btn.textContent = '🙈';
            } else {
                input.type = 'password';
                btn.textContent = '👁️';
            }
        }
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>