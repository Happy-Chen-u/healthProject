@model List<healthProject.Models.MissedRecordViewModel>
@{
    ViewData["Title"] = "個案健康資訊填寫狀況";
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <style>
        body {
            background: #f0f4f8;
            font-family: 'Microsoft JhengHei', Arial, sans-serif;
        }

        .main-container {
            max-width: 1400px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        .page-header {
            background: white;
            padding: 1.5rem;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            margin-bottom: 1.5rem;
        }

        .page-title {
            color: #2c3e50;
            font-size: 1.8rem;
            font-weight: 600;
            margin: 0;
        }

        .search-card {
            background: white;
            padding: 1.5rem;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            margin-bottom: 1.5rem;
        }

        .nav-tabs {
            border-bottom: 2px solid #5a9;
        }

            .nav-tabs .nav-link {
                color: #666;
                font-weight: 500;
                border: none;
                padding: 0.75rem 1.5rem;
            }

                .nav-tabs .nav-link.active {
                    background: #5a9;
                    color: white;
                    border-radius: 8px 8px 0 0;
                }

        .badge {
            font-size: 0.9rem;
            padding: 0.4rem 0.8rem;
        }

        .table-card {
            background: white;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            padding: 1.5rem;
        }

        .btn-back {
            background: #6b8e8e;
            color: white;
            border: none;
            padding: 0.5rem 1.5rem;
            border-radius: 5px;
            text-decoration: none;
        }

            .btn-back:hover {
                background: #5a7d7d;
                color: white;
            }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- 頁首 -->
        <div class="page-header d-flex justify-content-between align-items-center">
            <h1 class="page-title"><i class="bi bi-clipboard-data"></i> 個案健康資訊填寫狀況</h1>
            <a href="@Url.Action("Dashboard", "Home")" class="btn-back">
                <i class="bi bi-arrow-left"></i> 回儀表板
            </a>
        </div>

        <!-- 搜尋區塊 -->
        <div class="search-card">
            <form method="get" class="row g-3">
                <div class="col-md-8">
                    <input type="text"
                           class="form-control"
                           name="searchIdNumber"
                           placeholder="輸入身分證字號查詢"
                           value="@ViewBag.SearchIdNumber">
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-search"></i> 查詢
                    </button>
                    <a href="@Url.Action("MissedRecordsStatus")" class="btn btn-secondary">
                        <i class="bi bi-arrow-counterclockwise"></i> 清除
                    </a>
                </div>
            </form>
        </div>

        <!-- 修改分頁標籤,新增「從未填寫」分頁 -->
        <ul class="nav nav-tabs mb-3" id="missedDaysTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="days2-tab" data-bs-toggle="tab"
                        data-bs-target="#days2" type="button" role="tab">
                    兩天未填 <span class="badge bg-warning text-dark">@Model.Count(m => m.MissedDays == 2)</span>
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="days3-tab" data-bs-toggle="tab"
                        data-bs-target="#days3" type="button" role="tab">
                    三天未填 <span class="badge bg-warning text-dark">@Model.Count(m => m.MissedDays == 3)</span>
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="days4-tab" data-bs-toggle="tab"
                        data-bs-target="#days4" type="button" role="tab">
                    四天未填 <span class="badge bg-warning text-dark">@Model.Count(m => m.MissedDays == 4)</span>
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="days5plus-tab" data-bs-toggle="tab"
                        data-bs-target="#days5plus" type="button" role="tab">
                    五天以上 <span class="badge bg-danger">@Model.Count(m => m.MissedDays >= 5 && m.MissedDays < 999)</span>
                </button>
            </li>
            <!-- ✅ 新增從未填寫分頁 -->
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="never-tab" data-bs-toggle="tab"
                        data-bs-target="#never" type="button" role="tab">
                    從未填寫 <span class="badge bg-secondary">@Model.Count(m => m.MissedDays >= 999)</span>
                </button>
            </li>
        </ul>

        <!-- 分頁內容 -->
        <div class="tab-content table-card" id="missedDaysTabContent">
            <div class="tab-pane fade show active" id="days2" role="tabpanel">
                @await Html.PartialAsync("_MissedRecordsTable", Model.Where(m => m.MissedDays == 2).ToList())
            </div>
            <div class="tab-pane fade" id="days3" role="tabpanel">
                @await Html.PartialAsync("_MissedRecordsTable", Model.Where(m => m.MissedDays == 3).ToList())
            </div>
            <div class="tab-pane fade" id="days4" role="tabpanel">
                @await Html.PartialAsync("_MissedRecordsTable", Model.Where(m => m.MissedDays == 4).ToList())
            </div>
            <div class="tab-pane fade" id="days5plus" role="tabpanel">
                @await Html.PartialAsync("_MissedRecordsTable", Model.Where(m => m.MissedDays >= 5 && m.MissedDays < 999).OrderByDescending(m => m.MissedDays).ToList())
            </div>
            <!-- ✅ 新增從未填寫內容 -->
            <div class="tab-pane fade" id="never" role="tabpanel">
                @await Html.PartialAsync("_MissedRecordsTable", Model.Where(m => m.MissedDays >= 999).ToList())
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>