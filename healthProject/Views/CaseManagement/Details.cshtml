@model CaseManagementViewModel
@{
    ViewData["Title"] = "個案紀錄詳細資料";
    Layout = null;

    // 判斷是收案評估還是年度評估
    bool isAnnualAssessment = Model.AnnualAssessment;

    // 輔助函數：取得運動狀況
    string GetExerciseStatus()
    {
        if (Model.ExerciseNone) return "無";
        if (Model.ExerciseUsually) return "偶爾";
        if (Model.ExerciseAlways) return "經常";
        return "--";
    }

    // 輔助函數：取得抽菸狀況
    string GetSmokingStatus()
    {
        if (Model.SmokingNone) return "無";
        if (Model.SmokingUsually) return "偶爾";
        if (Model.SmokingUnder10) return "10支/日以下";
        if (Model.SmokingOver10) return "10支/日以上";
        return "--";
    }

    // 輔助函數：取得嚼檳榔狀況
    string GetBetelNutStatus()
    {
        if (Model.BetelNutNone) return "無";
        if (Model.BetelNutUsually) return "偶爾";
        if (Model.BetelNutAlways) return "經常";
        return "--";
    }

    // 輔助函數：取得疾病風險
    string GetRiskLevel(bool high, bool medium, bool low, bool na)
    {
        if (high) return "高";
        if (medium) return "中";
        if (low) return "低";
        if (na) return "不適用";
        return "--";
    }

    // 輔助函數：取得戒菸服務
    string GetSmokingService()
    {
        if (Model.SmokingServiceType1) return "戒菸指導";
        if (Model.SmokingServiceType2_Provide) return "提供戒菸服務";
        return "--";
    }

    // 輔助函數：取得每日熱量
    string GetDailyCalories()
    {
        if (Model.DailyCalories1200) return "1200";
        if (Model.DailyCalories1500) return "1500";
        if (Model.DailyCalories1800) return "1800";
        if (Model.DailyCalories2000) return "2000";
        if (Model.DailyCaloriesOther) return Model.DailyCaloriesOtherValue ?? "其他";
        return "--";
    }

    // 輔助函數：取得盡量減少
    string GetReduceItems()
    {
        var items = new List<string>();
        if (Model.ReduceFriedFood) items.Add("油炸物");
        if (Model.ReduceSweetFood) items.Add("甜食");
        if (Model.ReduceSalt) items.Add("鹽");
        if (Model.ReduceSugaryDrinks) items.Add("含糖飲料");
        if (Model.ReduceOther) items.Add(Model.ReduceOtherValue ?? "其他");
        return items.Count > 0 ? string.Join("、", items) : "--";
    }

    // 輔助函數：取得運動建議
    string GetExerciseAdvice()
    {
        if (Model.ExerciseGuidance) return "提供運動指導";
        if (Model.SocialExerciseResources) return "社區運動資源: " + (Model.SocialExerciseResources_Text ?? "");
        return "--";
    }
}

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Microsoft JhengHei', Arial, sans-serif;
            background: #f0f4f8;
            padding: 20px;
            font-size: 13px;
            color: #333;
        }

        .container {
            max-width: 1600px;
            margin: 0 auto;
            background: white;
            border: 2px solid #5a9;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .main-title {
            background: #5a9;
            color: white;
            text-align: center;
            padding: 12px;
            font-size: 20px;
            font-weight: bold;
            letter-spacing: 2px;
        }

        /* 病患資訊列 */
        .patient-row {
            display: flex;
            border-bottom: 1px solid #bcd;
            background: #f8fdf9;
            flex-wrap: wrap;
        }

        .patient-cell {
            flex: 1;
            min-width: 200px;
            padding: 10px 15px;
            border-right: 1px solid #cde;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .patient-cell:last-child {
                border-right: none;
            }

            .patient-cell strong {
                color: #357;
                white-space: nowrap;
            }

            .patient-cell span {
                font-weight: 500;
            }

        /* 日期列 */
        .date-row {
            display: flex;
            border-bottom: 2px solid #5a9;
            background: #eef6f0;
            flex-wrap: wrap;
        }

        .date-cell {
            padding: 10px 20px;
            border-right: 1px solid #cde;
            display: flex;
            align-items: center;
            gap: 10px;
            white-space: nowrap;
        }

            .date-cell strong {
                color: #357;
            }

        .record-type-badge {
            padding: 4px 12px;
            border-radius: 15px;
            font-size: 12px;
            font-weight: 600;
        }

        .badge-first {
            background: #d4edda;
            color: #2a5a3a;
        }

        .badge-annual {
            background: #cce5ff;
            color: #004085;
        }

        /* 區塊標題 */
        .section-title {
            background: #5a9;
            color: white;
            padding: 8px 15px;
            font-weight: bold;
            font-size: 14px;
        }

        .table-wrapper {
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            min-width: 1400px;
        }

        th, td {
            border: 1px solid #bcd;
            padding: 10px 8px;
            text-align: center;
            vertical-align: middle;
        }

        th {
            background: #e8f4ea;
            color: #2a5a3a;
            font-weight: 600;
            font-size: 12px;
            white-space: nowrap;
        }

        td {
            background: white;
            min-width: 100px;
            font-weight: 500;
        }

        /* 戒檳區塊 */
        .quit-section {
            font-size: 12px;
            text-align: left;
            min-width: 160px;
        }

            .quit-section label {
                display: block;
                margin-bottom: 3px;
                color: #357;
                font-weight: 500;
            }

            .quit-section .value {
                color: #333;
                font-weight: 600;
                margin-bottom: 8px;
            }

        /* 按鈕區 */
        .button-row {
            padding: 20px;
            text-align: center;
            background: #f8fdf9;
            border-top: 2px solid #5a9;
        }

        .btn {
            padding: 12px 35px;
            margin: 0 10px;
            border: none;
            border-radius: 5px;
            font-size: 15px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
            text-decoration: none;
            display: inline-block;
        }

        .btn-primary {
            background: #5a9;
            color: white;
        }

            .btn-primary:hover {
                background: #4a8;
                color: white;
            }

        .btn-secondary {
            background: #8aa;
            color: white;
        }

            .btn-secondary:hover {
                background: #799;
                color: white;
                text-decoration: none;
            }

        /* 備註區 */
        .notes-content {
            padding: 15px;
            background: #fafafa;
            min-height: 60px;
            border: 1px solid #eee;
            margin: 10px 15px;
            border-radius: 5px;
        }

        @@media (max-width: 768px) {
            body {
                padding: 10px;
            }

            .date-row {
                flex-direction: column;
            }

            .patient-cell {
                min-width: 100%;
            }

            .button-row {
                display: flex;
                flex-direction: column;
                gap: 10px;
            }

            .btn {
                width: 100%;
                margin: 0;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="main-title">代謝症候群疾病管理紀錄表 - 查看</div>

        <!-- 病患資訊列 -->
        <div class="patient-row">
            <div class="patient-cell"><strong>姓名：</strong><span>@Model.Name</span></div>
            <div class="patient-cell"><strong>身分證字號：</strong><span>@Model.IDNumber</span></div>
            <div class="patient-cell"><strong>性別：</strong><span>@Model.Gender</span></div>
            <div class="patient-cell"><strong>生日：</strong><span>@Model.BirthDate.ToString("yyyy/MM/dd")</span></div>
        </div>

        <!-- 日期列 -->
        <div class="date-row">
            <div class="date-cell">
                @if (isAnnualAssessment)
                {
                    <span class="record-type-badge badge-annual">年度評估</span>
                    <strong>年度評估日期：</strong>
                    <span>@(Model.AnnualAssessment_Date?.ToString("yyyy/MM/dd") ?? Model.AssessmentDate?.ToString("yyyy/MM/dd") ?? "--")</span>
                }
                else
                {
                    <span class="record-type-badge badge-first">收案評估</span>
                    <strong>收案評估日期：</strong>
                    <span>@(Model.AssessmentDate?.ToString("yyyy/MM/dd") ?? "--")</span>
                }
            </div>
            <div class="date-cell">
                <strong>建議回診日期：</strong>
                <span>@(Model.FollowUpDate?.ToString("yyyy/MM/dd") ?? "--")</span>
            </div>
        </div>

        <!-- 評估指數 -->
        <div class="section-title">評估指數</div>
        <div class="table-wrapper">
            <table>
                <thead>
                    <tr>
                        <th>身高(公分)</th>
                        <th>體重(公斤)</th>
                        <th>BMI(kg/m²)</th>
                        <th>腰圍(公分)</th>
                        <th>運動</th>
                        <th>抽菸</th>
                        <th>嚼檳榔</th>
                        <th>飯前血糖值(mg/dL)</th>
                        <th>收縮壓(mmHg)</th>
                        <th>舒張壓(mmHg)</th>
                        <th>三酸甘油脂(mg/dL)</th>
                        <th>高密度脂蛋白膽固醇(mg/dL)</th>
                        <th>低密度脂蛋白膽固醇(mg/dL)</th>
                        <th>醣化血紅素(mg/dL)</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Height</td>
                        <td>@Model.Weight</td>
                        <td>@(Model.BMI_Value?.ToString("F1") ?? "--")</td>
                        <td>@(Model.CurrentWaist_Value?.ToString() ?? "--")</td>
                        <td>@GetExerciseStatus()</td>
                        <td>@GetSmokingStatus()</td>
                        <td>@GetBetelNutStatus()</td>
                        <td>@(Model.FastingGlucose_Value?.ToString() ?? "--")</td>
                        <td>@(Model.SystolicBP_Value?.ToString() ?? "--")</td>
                        <td>@(Model.DiastolicBP_Value?.ToString() ?? "--")</td>
                        <td>@(Model.Triglycerides_Value?.ToString() ?? "--")</td>
                        <td>@(Model.HDL_Value?.ToString() ?? "--")</td>
                        <td>@(Model.LDL_Value?.ToString() ?? "--")</td>
                        <td>@(Model.HbA1c_Value?.ToString("F1") ?? "--")</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- 疾病管理指引 -->
        <div class="section-title">疾病管理指引</div>
        <div class="table-wrapper">
            <table>
                <thead>
                    <tr>
                        <th>是否需722血壓表</th>
                        <th>戒菸</th>
                        <th>戒檳</th>
                        <th>每日建議攝取熱量</th>
                        <th>盡量減少</th>
                        <th>運動建議</th>
                        <th>目標腰圍(cm)</th>
                        <th>目標體重(kg)</th>
                        <th>飯前血糖目標值</th>
                        <th>醣化血紅素目標值</th>
                        <th>三酸甘油脂目標值</th>
                        <th>高密度脂蛋白目標值</th>
                        <th>低密度脂蛋白目標值</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@(Model.BloodPressureGuidance722 ? "是" : "否")</td>
                        <td>@GetSmokingService()</td>
                        <td>
                            <div class="quit-section">
                                <label>戒檳目標：</label>
                                <div class="value">
                                    @if (Model.BetelQuitYear.HasValue && Model.BetelQuitMonth.HasValue && Model.BetelQuitDay.HasValue)
                                    {
                                        @($"{Model.BetelQuitYear}/{Model.BetelQuitMonth}/{Model.BetelQuitDay}")
                                    }
                                    else
                                    {
                                        @("--")
                                    }
                                </div>
                                <label>口腔檢查：</label>
                                <div class="value">
                                    @if (Model.OralExamYear.HasValue && Model.OralExamMonth.HasValue)
                                    {
                                        @($"{Model.OralExamYear}/{Model.OralExamMonth}")
                                    }
                                    else
                                    {
                                        @("--")
                                    }
                                </div>
                            </div>
                        </td>
                        <td>@GetDailyCalories()</td>
                        <td>@GetReduceItems()</td>
                        <td>@GetExerciseAdvice()</td>
                        <td>@(Model.WaistTarget_Value?.ToString() ?? "--")</td>
                        <td>@(Model.WeightTarget_Value?.ToString() ?? "--")</td>
                        <td>@(Model.FastingGlucoseTarget_Value?.ToString() ?? "--")</td>
                        <td>@(Model.HbA1cTarget_Value?.ToString() ?? "--")</td>
                        <td>@(Model.TriglyceridesTarget_Value?.ToString() ?? "--")</td>
                        <td>@(Model.HDL_CholesterolTarget_Value?.ToString() ?? "--")</td>
                        <td>@(Model.LDL_CholesterolTarget_Value?.ToString() ?? "--")</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- 得到慢性病的風險 -->
        <div class="section-title">得到慢性病的風險</div>
        <div class="table-wrapper">
            <table style="min-width: 800px;">
                <thead>
                    <tr>
                        <th style="width:20%">冠心病</th>
                        <th style="width:20%">糖尿病</th>
                        <th style="width:20%">高血壓</th>
                        <th style="width:20%">腦中風</th>
                        <th style="width:20%">心血管不良事件</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@GetRiskLevel(Model.CoronaryHigh, Model.CoronaryMedium, Model.CoronaryLow, Model.CoronaryNotApplicable)</td>
                        <td>@GetRiskLevel(Model.DiabetesHigh, Model.DiabetesMedium, Model.DiabetesLow, Model.DiabetesNotApplicabe)</td>
                        <td>@GetRiskLevel(Model.HypertensionHigh, Model.HypertensionMedium, Model.HypertensionLow, Model.HypertensionNotApplicable)</td>
                        <td>@GetRiskLevel(Model.StrokeHigh, Model.StrokeMedium, Model.StrokeLow, Model.StrokeNotApplicable)</td>
                        <td>@GetRiskLevel(Model.CardiovascularHigh, Model.CardiovascularMedium, Model.CardiovascularLow, Model.CardiovascularNotApplicable)</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- 其他備註 -->
        <div class="section-title">其他備註</div>
        <div class="notes-content">
            @(string.IsNullOrEmpty(Model.Notes) ? "無" : Model.Notes)
        </div>

        <!-- 按鈕 -->
        <div class="button-row">
            @if (User.IsInRole("Admin"))
            {
                <a href="@Url.Action("ViewAllRecords", "CaseManagement")" class="btn btn-secondary">← 返回列表</a>
                <a href="@Url.Action("Edit", "CaseManagement", new { id = Model.Id })" class="btn btn-primary">✏️ 編輯紀錄</a>
            }
            else
            {
                <a href="@Url.Action("PatientRecords", "CaseManagement")" class="btn btn-secondary">← 返回列表</a>
            }
        </div>
    </div>
</body>
</html>