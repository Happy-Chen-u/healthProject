@model List<CaseManagementViewModel>
@{
    ViewData["Title"] = "所有個案紀錄";
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #FFF8E1 0%, #FFE0B2 100%);
            min-height: 100vh;
            font-family: 'Microsoft JhengHei', 'Segoe UI', Arial, sans-serif;
            padding: 2rem 1rem;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            background: white;
            border-radius: 25px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            overflow: hidden;
        }

        .header {
            background: linear-gradient(135deg, #FFB74D 0%, #FFA726 100%);
            color: white;
            padding: 2rem;
            text-align: center;
        }

        .header-title {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .content {
            padding: 2rem;
        }

        .search-section {
            background: linear-gradient(135deg, #FFF3E0 0%, #FFE0B2 100%);
            border: 3px solid #FFB74D;
            padding: 1.5rem;
            border-radius: 15px;
            margin-bottom: 2rem;
        }

        .search-form {
            display: flex;
            gap: 1rem;
            align-items: center;
        }

        .search-input {
            flex: 1;
            padding: 0.75rem;
            border: 2px solid #FFB74D;
            border-radius: 10px;
            font-size: 1rem;
        }

        .btn {
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 10px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
        }

        .btn-primary {
            background: linear-gradient(135deg, #FFB74D 0%, #FFA726 100%);
            color: white;
        }

        .btn-secondary {
            background: linear-gradient(135deg, #78909C 0%, #607D8B 100%);
            color: white;
        }

        .btn-success {
            background: linear-gradient(135deg, #66BB6A 0%, #4CAF50 100%);
            color: white;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .alert {
            padding: 1rem;
            border-radius: 10px;
            margin-bottom: 1.5rem;
        }

        .alert-success {
            background: #E8F5E9;
            border: 2px solid #66BB6A;
            color: #2E7D32;
            font-weight: 600;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1rem;
        }

        th {
            background: linear-gradient(135deg, #FFB74D 0%, #FFA726 100%);
            color: white;
            padding: 1rem;
            text-align: left;
            font-weight: 700;
        }

        td {
            padding: 0.75rem 1rem;
            border-bottom: 1px solid #FFE0B2;
        }

        tr:hover {
            background: #FFF8E1;
        }

        .action-buttons {
            display: flex;
            gap: 0.5rem;
        }

        .btn-small {
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
        }

        .empty-message {
            text-align: center;
            padding: 3rem;
            color: #E65100;
            font-size: 1.2rem;
        }

        .button-group {
            margin-bottom: 1.5rem;
            display: flex;
            gap: 1rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1 class="header-title">📋 所有個案紀錄</h1>
        </div>

        <div class="content">
            <!-- 成功訊息 -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    ✅ @TempData["SuccessMessage"]
                </div>
            }

            <!-- 按鈕區 -->
            <div class="button-group">
                <a href="@Url.Action("CreateRecord", "CaseManagement")" class="btn btn-success">
                    ➕ 新增個案紀錄
                </a>
                <a href="@Url.Action("Index", "CaseManagement")" class="btn btn-secondary">
                    ← 返回主選單
                </a>
            </div>

            <!-- 搜尋區 -->
            <div class="search-section">
                <form asp-action="ViewAllRecords" method="get" class="search-form">
                    <input type="text"
                           name="searchIdNumber"
                           class="search-input"
                           placeholder="輸入身分證字號搜尋..."
                           value="@ViewBag.SearchIdNumber" />
                    <button type="submit" class="btn btn-primary">🔍 搜尋</button>
                    @if (!string.IsNullOrEmpty(ViewBag.SearchIdNumber))
                    {
                        <a href="@Url.Action("ViewAllRecords", "CaseManagement")" class="btn btn-secondary">
                            清除搜尋
                        </a>
                    }
                </form>
            </div>

            <!-- 紀錄表格 -->
            @if (Model != null && Model.Any())
            {
                <table>
                    <thead>
                        <tr>
                            <th>身分證字號</th>
                            <th>姓名</th>
                            <th>性別</th>
                            <th>出生日期</th>
                            <th>評估日期</th>
                            <th>回診日期</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var record in Model)
                        {
                            <tr>
                                <td>@record.IDNumber</td>
                                <td>@record.Name</td>
                                <td>@record.Gender</td>
                                <td>@record.BirthDate.ToString("yyyy/MM/dd")</td>
                                <td>@(record.AssessmentDate?.ToString("yyyy/MM/dd") ?? "-")</td>
                                <td>@(record.FollowUpDate?.ToString("yyyy/MM/dd") ?? "-")</td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="@Url.Action("Details", "CaseManagement", new { id = record.Id })"
                                           class="btn btn-primary btn-small">
                                            查看
                                        </a>
                                        <a href="@Url.Action("Edit", "CaseManagement", new { id = record.Id })"
                                           class="btn btn-secondary btn-small">
                                            編輯
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <p style="margin-top: 1rem; color: #666;">
                    共 @Model.Count 筆紀錄
                </p>
            }
            else
            {
                <div class="empty-message">
                    📭 目前沒有任何紀錄
                    <br />
                    <a href="@Url.Action("CreateRecord", "CaseManagement")"
                       style="color: #FF9800; text-decoration: underline;">
                        點此新增第一筆紀錄
                    </a>
                </div>
            }
        </div>
    </div>
</body>
</html>