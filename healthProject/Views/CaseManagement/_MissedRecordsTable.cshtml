@model List<healthProject.Models.MissedRecordViewModel>

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <style>
        
        .modal-dialog {
            margin: 1rem;
            max-width: calc(100% - 2rem);
        }

        @@media (max-width: 576px) {
            .modal-dialog

        {
            margin: 0.5rem;
            max-width: calc(100% - 1rem);
        }

        .modal {
            padding-right: 0 !important;
        }

        .modal-content {
            border-radius: 0.5rem;
        }

        .table-responsive {
            font-size: 0.875rem;
        }

        .btn-sm {
            font-size: 0.75rem;
            padding: 0.25rem 0.5rem;
        }

        .badge {
            font-size: 0.75rem !important;
        }

        td .btn, td .badge {
            margin-bottom: 0.25rem;
            display: inline-block;
        }

        }

        @@media (min-width: 576px) {
            .modal-dialog

        {
            max-width: 500px;
            margin: 1.75rem auto;
        }

        }

        .modal-backdrop {
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1040;
            width: 100vw;
            height: 100vh;
        }

        .modal {
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1050;
            width: 100%;
            height: 100%;
            overflow-x: hidden;
            overflow-y: auto;
        }
    </style>
</head>
<body>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> 目前沒有符合條件的個案
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <thead class="table-light">
                    <tr>
                        <th style="width:8%">未填天數</th>
                        <th style="width:10%">姓名</th>
                        <th style="width:12%">身分證字號</th>
                        <th style="width:12%">生日</th>
                        <th style="width:6%">性別</th>
                        <th style="width:10%">電話</th>
                        <th style="width:12%">上次填寫</th>
                        <th style="width:30%">操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var record in Model)
                    {
                        <tr>
                            <!-- 修改未填天數顯示邏輯 -->
                            <td class="text-center">
                                @if (record.MissedDays >= 999)
                                {
                                    <span class="badge bg-secondary fs-6">從未填寫</span>
                                }
                                else if (record.MissedDays >= 5)
                                {
                                    <span class="badge bg-danger fs-6">@record.MissedDays 天</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark fs-6">@record.MissedDays 天</span>
                                }
                            </td>
                            <td>@record.FullName</td>
                            <td>@record.IDNumber</td>
                            <td>@(record.BirthDate != DateTime.MinValue ? record.BirthDate.ToString("yyyy-MM-dd") : "--")</td>
                            <td class="text-center">@record.Gender</td>
                            <td>@record.PhoneNumber</td>
                            <td>@(record.LastRecordDate?.ToString("yyyy-MM-dd") ?? "從未填寫")</td>
                            <td>
                                <a href="@Url.Action("GetPatientRecords", "DailyHealth", new { idNumber = record.IDNumber })"
                                   class="btn btn-sm btn-health me-1"
                                   title="查看健康紀錄">
                                    <i class="bi bi-file-medical"></i> 健康紀錄
                                </a>
                                @if (!string.IsNullOrEmpty(record.MissedReason))
                                {
                                    <button type="button"
                                            class="btn btn-sm btn-reason me-1"
                                            data-bs-toggle="modal"
                                            data-bs-target="#reasonModal-@record.UserId"
                                            title="查看未填原因">
                                        <i class="bi bi-chat-left-text"></i> 原因
                                    </button>

                                }
                                else
                                {
                                    <span class="badge bg-secondary">尚未回覆</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- 將所有 Modal 移到表格外面 -->
        @foreach (var record in Model)
        {
            @if (!string.IsNullOrEmpty(record.MissedReason))
            {
                <div class="modal fade" id="reasonModal-@record.UserId" tabindex="-1" aria-labelledby="reasonModalLabel-@record.UserId" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                        <div class="modal-content">
                            <div class="modal-header reason-header">
                                <h5 class="modal-title" id="reasonModalLabel-@record.UserId">
                                    <i class="bi bi-chat-square-text me-1"></i>
                                    未填寫原因 - @record.FullName
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <p><strong>個案:</strong> @record.FullName (@record.IDNumber)</p>
                                <p><strong>原因:</strong></p>
                                <div class="reason-box">
                                    @record.MissedReason
                                </div>

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    }

    <script>
        // 確保 modal 在手機上正確顯示
        document.addEventListener('DOMContentLoaded', function() {
            var modals = document.querySelectorAll('.modal');
            modals.forEach(function(modal) {
                modal.addEventListener('show.bs.modal', function() {
                    // 強制將 modal 滾動到頂部
                    setTimeout(function() {
                        document.body.style.overflow = 'hidden';
                        modal.scrollTop = 0;
                    }, 100);
                });

                modal.addEventListener('hidden.bs.modal', function() {
                    document.body.style.overflow = '';
                });
            });
        });
    </script>

</body>
</html>