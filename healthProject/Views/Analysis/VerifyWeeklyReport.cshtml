@{
    ViewData["Title"] = "週報驗證";
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);
            min-height: 100vh;
            font-family: 'Microsoft JhengHei', 'Segoe UI', Arial, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .container {
            max-width: 500px;
            width: 100%;
        }

        .card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            overflow: hidden;
        }

        .card-header {
            background: linear-gradient(135deg, #42A5F5 0%, #1E88E5 100%);
            color: white;
            padding: 2rem;
            text-align: center;
        }

        .card-header h1 {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .card-header p {
            font-size: 1rem;
            opacity: 0.9;
        }

        .card-body {
            padding: 2rem;
        }

        .info-box {
            background: #E3F2FD;
            border-left: 4px solid #1E88E5;
            padding: 1rem;
            margin-bottom: 1.5rem;
            border-radius: 5px;
        }

        .info-box p {
            margin: 0.5rem 0;
            color: #1565C0;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            font-weight: 600;
            color: #1565C0;
            margin-bottom: 0.5rem;
        }

        .form-input {
            width: 100%;
            padding: 0.75rem;
            border: 2px solid #42A5F5;
            border-radius: 10px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-input:focus {
            outline: none;
            border-color: #1E88E5;
            box-shadow: 0 0 0 3px rgba(33, 150, 243, 0.1);
        }

        .btn {
            width: 100%;
            padding: 1rem;
            border: none;
            border-radius: 10px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-primary {
            background: linear-gradient(135deg, #42A5F5 0%, #1E88E5 100%);
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(33, 150, 243, 0.3);
        }

        .btn-primary:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

        .notice {
            text-align: center;
            margin-top: 1.5rem;
            padding-top: 1.5rem;
            border-top: 1px solid #E0E0E0;
        }

        .notice small {
            display: block;
            color: #757575;
            margin: 0.3rem 0;
        }

        .loading {
            display: none;
            text-align: center;
            padding: 2rem 0;
        }

        .spinner {
            border: 4px solid #BBDEFB;
            border-top: 4px solid #1E88E5;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 0 auto 1rem;
        }

        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .alert {
            padding: 1rem;
            border-radius: 10px;
            margin-bottom: 1rem;
            display: none;
        }

        .alert-danger {
            background: #FFCDD2;
            color: #C62828;
            border-left: 4px solid #C62828;
        }

        .alert-success {
            background: #C8E6C9;
            color: #2E7D32;
            border-left: 4px solid #2E7D32;
        }

        .success-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1>🔒 週報驗證</h1>
                <p>代謝症候群管理系統</p>
            </div>

            <div class="card-body">
                <div id="errorDiv" class="alert alert-danger"></div>

                <div id="verifyForm">
                    <div class="info-box">
                        <p><strong>📊 本週健康報表已產生完成</strong></p>
                        <p>為保護您的隱私，請輸入身分證字號驗證身份</p>
                    </div>

                    <div class="form-group">
                        <label class="form-label">身分證字號</label>
                        <input type="text" id="idNumberInput" class="form-input"
                               placeholder="例如: A123456789" maxlength="10" />
                    </div>

                    <button class="btn btn-primary" onclick="verifyAndDownload()">
                        <span id="btnText">🔐 驗證並下載報表</span>
                    </button>

                    <div class="notice">
                        <small>⏰ 此連結有效期限為 7 天</small>
                        <small>🔒 請勿將連結分享給他人</small>
                        <small>❓ 如有問題，請洽詢醫療團隊</small>
                    </div>
                </div>

                <div id="loadingDiv" class="loading">
                    <div class="spinner"></div>
                    <p style="color: #1E88E5; font-weight: 600;">驗證中，請稍候...</p>
                </div>

                <div id="successDiv" style="display:none; text-align:center;">
                    <div class="success-icon">✅</div>
                    <h2 style="color: #2E7D32; margin-bottom: 1rem;">驗證成功!</h2>
                    <p style="color: #558B2F; margin-bottom: 1rem;">週報已開始下載...</p>
                    <small style="color: #757575;">如未自動下載，請檢查瀏覽器下載資料夾</small>
                </div>
            </div>
        </div>
    </div>

    <script>
        const reportId = '@ViewBag.ReportId';

        // Enter 鍵送出
        document.getElementById('idNumberInput').addEventListener('keypress', function (e) {
            if (e.key === 'Enter') {
                verifyAndDownload();
            }
        });

        async function verifyAndDownload() {
            const idNumber = document.getElementById('idNumberInput').value.trim();

            if (!idNumber) {
                showError('請輸入身分證字號');
                return;
            }

            // 驗證格式
            const idPattern = /^[A-Z][12]\d{8}$/;
            if (!idPattern.test(idNumber)) {
                showError('身分證格式錯誤\n正確格式: A123456789 (第一碼英文大寫，第二碼為1或2，後面8碼數字)');
                return;
            }

            // 顯示載入中
            document.getElementById('verifyForm').style.display = 'none';
            document.getElementById('loadingDiv').style.display = 'block';
            document.getElementById('errorDiv').style.display = 'none';

            try {
                const response = await fetch('/Analysis/VerifyAndDownloadWeeklyReport', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        IDNumber: idNumber,
                        ReportDate: reportId
                    })
                });

                const result = await response.json();

                if (result.success) {
                    // 下載 PDF
                    const linkSource = `data:application/pdf;base64,${result.pdfBase64}`;
                    const downloadLink = document.createElement('a');
                    downloadLink.href = linkSource;
                    downloadLink.download = result.fileName;
                    downloadLink.click();

                    // 顯示成功訊息
                    document.getElementById('loadingDiv').style.display = 'none';
                    document.getElementById('successDiv').style.display = 'block';
                } else {
                    throw new Error(result.message || '驗證失敗');
                }
            } catch (error) {
                console.error('驗證錯誤:', error);
                document.getElementById('loadingDiv').style.display = 'none';
                document.getElementById('verifyForm').style.display = 'block';
                showError(error.message);
            }
        }

        function showError(message) {
            const errorDiv = document.getElementById('errorDiv');
            errorDiv.textContent = message;
            errorDiv.style.display = 'block';
            
            // 3秒後自動隱藏
            setTimeout(() => {
                errorDiv.style.display = 'none';
            }, 5000);
        }
    </script>
</body>
</html>