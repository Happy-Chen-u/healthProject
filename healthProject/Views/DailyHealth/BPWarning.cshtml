@model HealthRecordViewModel
@{
    ViewData["Title"] = "血壓記錄提醒";
    Layout = null;
    var hasDuplicatedMeals = ViewBag.HasDuplicatedMeals == true;
    var duplicatedMeals = ViewBag.DuplicatedMealsList as List<string> ?? new List<string>();
    var existingMeals = ViewBag.ExistingMeals as Dictionary<string, MealSelection> ?? new Dictionary<string, MealSelection>();
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #e5eef5;
            font-family: 'Microsoft JhengHei', 'Segoe UI', Arial, sans-serif;
            min-height: 100vh;
            margin: 0;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .warning-container {
            max-width: 600px;
            margin: 2rem;
            padding: 2rem;
            background: white;
            border-radius: 20px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
            text-align: center;
        }

        .warning-icon {
            font-size: 5rem;
            margin-bottom: 1.5rem;
        }

        .warning-title {
            font-size: 1.8rem;
            font-weight: 700;
            color: #f59e0b;
            margin-bottom: 1rem;
        }

        .warning-message {
            font-size: 1.1rem;
            color: #475569;
            line-height: 1.8;
            margin-bottom: 2rem;
        }

        .highlight {
            color: #dc2626;
            font-weight: 700;
        }

        .button-group {
            display: flex;
            gap: 1rem;
            justify-content: center;
            flex-wrap: wrap;
        }

        .btn {
            padding: 1rem 2.5rem;
            border: none;
            border-radius: 50px;
            font-size: 1.05rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-cancel {
            background: #e2e8f0;
            color: #475569;
        }

            .btn-cancel:hover {
                background: #cbd5e1;
                transform: translateY(-2px);
            }

        .btn-confirm {
            background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);
            color: white;
            box-shadow: 0 4px 15px rgba(6, 182, 212, 0.3);
        }

            .btn-confirm:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(6, 182, 212, 0.4);
            }

        .info-box {
            background: #fef3c7;
            border-left: 4px solid #f59e0b;
            padding: 1rem;
            border-radius: 8px;
            margin: 1.5rem 0;
            text-align: left;
        }

        @@media (max-width: 768px) {
            .button-group {
                flex-direction: column;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <div class="warning-container">
        <div class="warning-icon">⚠️</div>
        <div class="warning-title">無法上傳已新增過的血壓</div>

        <div class="warning-message">
            <p><span class="highlight">今日此筆血壓測量已填寫完成</span></p>
            <p>如需修改血壓記錄,請到「查看紀錄」進行編輯</p>
        </div>

        @if (ViewBag.HasOtherData == true)
        {
            <div class="info-box">
                <strong>📝 提醒:</strong> 您本次填寫了其他健康資訊(飲食/運動/血糖等),<br>
                點擊「繼續上傳其他資訊」將保留這些資料進行上傳
            </div>
        }

        <div class="button-group">
            <a href="@Url.Action("Index", "DailyHealth")" class="btn btn-cancel">
                ← 取消
            </a>

            @if (ViewBag.HasOtherData == true)
            {
                @if (hasDuplicatedMeals)
                {
                    <!-- 情況1: 血壓重複 + 三餐也重複 - 使用 JavaScript confirm -->
                    <button type="button" class="btn btn-confirm" onclick="handleMealDuplication()">
                        ✓ 繼續上傳其他資訊
                    </button>

                    <form id="confirmForm" method="post" asp-action="ConfirmWithoutBP" style="display: none;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="formDataJson" value="@System.Text.Json.JsonSerializer.Serialize(ViewBag.FormData)" />
                    </form>

                    <form id="confirmWithoutMealsForm" method="get" action="@Url.Action("ShowMealChoices", "DailyHealth")" style="display: none;">
                        <input type="hidden" name="formDataJson" value="@System.Text.Json.JsonSerializer.Serialize(ViewBag.FormData)" />
                        <input type="hidden" name="duplicatedMealsJson" value="@System.Text.Json.JsonSerializer.Serialize(duplicatedMeals)" />
                        <input type="hidden" name="existingMealsJson" value="@System.Text.Json.JsonSerializer.Serialize(existingMeals)" />
                        <input type="hidden" name="fromBPWarning" value="true" />
                    </form>

                    <script>
                        function handleMealDuplication() {
                            var duplicatedMeals = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(duplicatedMeals));
                            var existingMealsData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(existingMeals));

                            // 組合訊息
                            var message = "⚠️ 您今日已有以下三餐紀錄:\n\n";

                            duplicatedMeals.forEach(function (mealType) {
                                var icon = mealType === "早餐" ? "🌅" : (mealType === "午餐" ? "☀️" : "🌙");
                                message += icon + " " + mealType + ":\n";

                                if (existingMealsData[mealType]) {
                                    var meal = existingMealsData[mealType];
                                    if (meal.Vegetables) message += "  🥬 蔬菜: " + meal.Vegetables + " 拳頭\n";
                                    if (meal.Protein) message += "  🍗 蛋白質: " + meal.Protein + " 拳頭\n";
                                    if (meal.Carbs) message += "  🍚 澱粉: " + meal.Carbs + " 拳頭\n";
                                }
                                message += "\n";
                            });

                            message += "請選擇:\n";
                            message += "【確定】→ 前往選擇頁面，決定每個三餐要保留或刪除\n";
                            message += "【取消】→ 保留所有資料繼續上傳";

                            if (confirm(message)) {
                                // 用戶選擇前往選擇頁面
                                document.getElementById('confirmWithoutMealsForm').submit();
                            } else {
                                // 用戶選擇保留所有資料
                                document.getElementById('confirmForm').submit();
                            }
                        }
                    </script>
                }
                else
                {
                    <!-- 原本的邏輯: 只有血壓重複 -->
                    <form method="post" asp-action="ConfirmWithoutBP" style="display: inline;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="formDataJson" value="@System.Text.Json.JsonSerializer.Serialize(ViewBag.FormData)" />
                        <button type="submit" class="btn btn-confirm">
                            ✓ 繼續上傳其他資訊
                        </button>
                    </form>
                }
            }
            else
            {
                <a href="@Url.Action("MyRecords", "DailyHealth")" class="btn btn-confirm">
                    📋 查看紀錄
                </a>
            }
        </div>
    </div>
</body>
</html>