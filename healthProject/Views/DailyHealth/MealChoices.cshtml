@{
    ViewData["Title"] = "三餐記錄選擇";
    Layout = null;
    var duplicatedMeals = ViewBag.DuplicatedMealsList as List<string> ?? new List<string>();
    var existingMeals = ViewBag.ExistingMeals as Dictionary<string, healthProject.Models.MealSelection> ?? new Dictionary<string, healthProject.Models.MealSelection>();
    var formData = ViewBag.FormData;
    var fromBPWarning = ViewBag.FromBPWarning == true;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #e5eef5;
            font-family: 'Microsoft JhengHei', 'Segoe UI', Arial, sans-serif;
            min-height: 100vh;
            margin: 0;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .warning-container {
            max-width: 750px;
            margin: 2rem;
            padding: 2rem;
            background: white;
            border-radius: 20px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
        }

        .warning-icon {
            font-size: 5rem;
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .warning-title {
            font-size: 1.8rem;
            font-weight: 700;
            color: #f59e0b;
            margin-bottom: 1rem;
            text-align: center;
        }

        .warning-subtitle {
            font-size: 1.1rem;
            color: #64748b;
            text-align: center;
            margin-bottom: 2rem;
        }

        .meal-card {
            background: #fff7ed;
            border: 2px solid #fb923c;
            border-radius: 15px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .meal-header {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 1rem;
            padding-bottom: 0.75rem;
            border-bottom: 2px solid #fed7aa;
        }

        .meal-icon {
            font-size: 2rem;
        }

        .meal-title {
            font-size: 1.3rem;
            font-weight: 700;
            color: #ea580c;
        }

        .meal-content {
            background: white;
            padding: 1rem;
            border-radius: 10px;
            margin-bottom: 1rem;
        }

        .meal-item {
            display: flex;
            justify-content: space-between;
            padding: 0.5rem 0;
            border-bottom: 1px dashed #e2e8f0;
        }

        .meal-item:last-child {
            border-bottom: none;
        }

        .meal-label {
            font-weight: 600;
            color: #64748b;
        }

        .meal-value {
            font-weight: 700;
            color: #ea580c;
        }

        .choice-section {
            background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
            padding: 1rem;
            border-radius: 10px;
        }

        .choice-title {
            font-size: 1rem;
            font-weight: 600;
            color: #92400e;
            margin-bottom: 0.75rem;
        }

        .radio-group {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .radio-option {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem;
            background: white;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.2s ease;
            border: 2px solid transparent;
        }

        .radio-option:hover {
            border-color: #fb923c;
            transform: translateX(3px);
        }

        .radio-option input[type="radio"] {
            width: 20px;
            height: 20px;
            cursor: pointer;
            accent-color: #ea580c;
        }

        .radio-option label {
            cursor: pointer;
            font-weight: 500;
            color: #1e293b;
            flex: 1;
        }

        .radio-option.selected {
            border-color: #ea580c;
            background: #fff7ed;
        }

        .button-group {
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-top: 2rem;
        }

        .btn {
            padding: 1rem 2.5rem;
            border: none;
            border-radius: 50px;
            font-size: 1.05rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-cancel {
            background: #e2e8f0;
            color: #475569;
        }

        .btn-cancel:hover {
            background: #cbd5e1;
            transform: translateY(-2px);
        }

        .btn-submit {
            background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);
            color: white;
            box-shadow: 0 4px 15px rgba(6, 182, 212, 0.3);
        }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(6, 182, 212, 0.4);
        }

        .info-note {
            background: #dbeafe;
            border-left: 4px solid #3b82f6;
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            font-size: 0.95rem;
            color: #1e40af;
        }

        @@media (max-width: 768px) {
            .warning-container {
                margin: 1rem;
                padding: 1.5rem;
            }

            .button-group {
                flex-direction: column;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <div class="warning-container">
        <div class="warning-icon">🍽️</div>
        <div class="warning-title">三餐記錄選擇</div>
        <div class="warning-subtitle">請選擇每個重複三餐的處理方式</div>

        <div class="info-note">
            <strong>💡 說明：</strong>您可以針對每個重複的三餐，選擇要「繼續新增」或「刪除不上傳」
        </div>

        <form id="mealChoiceForm" method="post" action="@Url.Action(fromBPWarning ? "ConfirmWithMealChoicesFromBP" : "ConfirmWithMealChoices", "DailyHealth")">
            @Html.AntiForgeryToken()
            <input type="hidden" name="formDataJson" value="@System.Text.Json.JsonSerializer.Serialize(formData)" />

            @foreach (var mealType in duplicatedMeals)
            {
                var mealIcon = mealType == "早餐" ? "🌅" : (mealType == "午餐" ? "☀️" : "🌙");
                var existingMeal = existingMeals.ContainsKey(mealType) ? existingMeals[mealType] : null;
                var fieldName = mealType == "早餐" ? "breakfast" : (mealType == "午餐" ? "lunch" : "dinner");

                <div class="meal-card">
                    <div class="meal-header">
                        <span class="meal-icon">@mealIcon</span>
                        <span class="meal-title">@mealType（已有記錄）</span>
                    </div>

                    @if (existingMeal != null)
                    {
                        <div class="meal-content">
                            <div class="meal-item">
                                <span class="meal-label">🥬 蔬菜:</span>
                                <span class="meal-value">@(string.IsNullOrEmpty(existingMeal.Vegetables) ? "未填寫" : existingMeal.Vegetables + " 拳頭")</span>
                            </div>
                            <div class="meal-item">
                                <span class="meal-label">🍗 蛋白質:</span>
                                <span class="meal-value">@(string.IsNullOrEmpty(existingMeal.Protein) ? "未填寫" : existingMeal.Protein + " 拳頭")</span>
                            </div>
                            <div class="meal-item">
                                <span class="meal-label">🍚 澱粉:</span>
                                <span class="meal-value">@(string.IsNullOrEmpty(existingMeal.Carbs) ? "未填寫" : existingMeal.Carbs + " 拳頭")</span>
                            </div>
                        </div>
                    }

                    <div class="choice-section">
                        <div class="choice-title">請選擇處理方式：</div>
                        <div class="radio-group">
                            <div class="radio-option" onclick="selectRadio(this)">
                                <input type="radio" id="@(fieldName)_keep" name="choice_@fieldName" value="keep" checked>
                                <label for="@(fieldName)_keep">✅ 繼續新增此餐（保留新舊兩筆記錄）</label>
                            </div>
                            <div class="radio-option" onclick="selectRadio(this)">
                                <input type="radio" id="@(fieldName)_delete" name="choice_@fieldName" value="delete">
                                <label for="@(fieldName)_delete">🗑️ 刪除不上傳（只保留舊記錄）</label>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <div class="button-group">
                <a href="@Url.Action("Create", "DailyHealth")" class="btn btn-cancel">
                    ← 取消全部
                </a>
                <button type="submit" class="btn btn-submit">
                    ✓ 確認送出
                </button>
            </div>
        </form>
    </div>

    <script>
        function selectRadio(element) {
            const radio = element.querySelector('input[type="radio"]');
            radio.checked = true;

            const name = radio.name;
            document.querySelectorAll(`input[name="${name}"]`).forEach(r => {
                r.closest('.radio-option').classList.remove('selected');
            });

            element.classList.add('selected');
        }

        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('input[type="radio"]:checked').forEach(radio => {
                radio.closest('.radio-option').classList.add('selected');
            });
        });
    </script>
</body>
</html>