                ${totalBetel > 0 ? `<div class="data-item"><div class="data-label">🌿 總檳榔量</div><div class="data-value">${totalBetel} 次</div></div>` : ''}
                ${(totalVeg + totalProtein + totalCarbs) > 0 ? `
                    <div class="data-item"><div class="data-label">🥬 總蔬菜份</div><div class="data-value">${totalVeg.toFixed(1)}</div></div>
                    <div class="data-item"><div class="data-label">🥩 總蛋白質份</div><div class="data-value">${totalProtein.toFixed(1)}</div></div>
