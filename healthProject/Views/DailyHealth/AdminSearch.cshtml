        margin: 0;
        padding: 0;
    }

    .page-header {
        background: linear-gradient(135deg, #337f4b 0%, #275a37 100%);
        color: white;
        padding: 2rem;
        border-radius: 15px;
        text-align: center;
        margin-bottom: 2rem;
        box-shadow: 0 4px 15px rgba(139, 92, 246, 0.3);
    }

    .page-header h1 {
