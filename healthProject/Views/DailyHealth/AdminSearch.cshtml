@{
    ViewData["Title"] = "查詢病患健康資訊";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #f5f5f5;
            font-family: 'Microsoft JhengHei', 'Segoe UI', Arial, sans-serif;
            margin: 0;
            padding: 20px;
        }

        .container {
            max-width: 1600px;
            margin: 0 auto;
        }

        .page-title {
            text-align: center;
            color: #333;
            font-size: 22px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .search-container {
            display: flex;
            gap: 15px;
            margin-bottom: 15px;
            align-items: center;
        }

        .search-box {
            display: flex;
            flex-wrap: nowrap; 
            align-items: center;
            padding: 12px 20px;
            background: white;
            border: 2px solid #455a64;
            border-radius: 12px;
            gap: 8px;
            max-width: 100%;
            width: 100%;
            box-sizing: border-box;
            overflow-x: auto; 
        }


            .search-box label {
                font-size: 14px;
                color: #333;
                white-space: nowrap;
                margin: 0;
            }

            .search-box input {
                padding: 5px 10px;
                border: 1px solid #ccc;
                border-radius: 3px;
                font-size: 14px;
                width: 100px; 
                min-width: 80px; 
                flex-shrink: 0; 
            }

            .search-box button {
                padding: 5px 18px;
                background: #5a9a5a;
                color: white;
                border: none;
                border-radius: 3px;
                cursor: pointer;
                font-size: 14px;
            }

                .search-box button:hover {
                    background: #4a8a4a;
                }

        .date-filter-box {
            display: none;
        }

            .date-filter-box.show {
                display: inline-flex;
            }

        .patient-info {
            background: #f7f5e7;
            border: 2px solid #455a64;
            padding: 12px 20px;
            margin-bottom: 15px;
            display: none;
            font-size: 14px;
            border-radius: 12px;
            overflow: hidden;
        }

            .patient-info.show {
                display: block;
            }

        .patient-info-content {
            display: flex;
            gap: 30px;
            flex-wrap: wrap;
        }

        .patient-info-item {
            display: flex;
            gap: 8px;
        }

        .patient-info-label {
            font-weight: bold;
        }

        .record-container {
            display: none;
        }

            .record-container.show {
                display: block;
            }

        .record-block {
            margin-bottom: 10px;
            border: 2px solid #455a64;
            background: white;
            border-radius: 12px;
            overflow: hidden;
        }

            .record-block table {
                width: 100%;
                border-collapse: collapse;
            }


        .date-header {
            background: #e8f5e9;
            border-bottom: 2px solid #455a64;
            padding: 10px 15px;
            font-weight: bold;
            font-size: 15px;
            padding: 10px 5px;
            text-align: left;
        }

        .bp-section {
            border-bottom: 2px solid #455a64;
        }

        .section-title {
            padding: 8px;
            text-align: center;
            font-weight: bold;
            font-size: 14px;
        }

        .bp-title {
            background: #699a54;
            color: #ebebeb;
        }

        .lifestyle-title {
            background: #699a54;
            color: #ebebeb;
        }

        .data-table {
            width: 100%;
            border-collapse: collapse;
        }

            .data-table th {
                background: #f5f5f5;
                padding: 8px;
                text-align: center;
                font-weight: bold;
                font-size: 13px;
                border: 1px solid #455a64;
            }

            .data-table td {
                padding: 8px;
                text-align: center;
                font-size: 13px;
                border: 1px solid #455a64;
            }

        .bp-section .data-table th {
            background: #d4decf;
        }

        .lifestyle-section .data-table th {
            background: #d4decf;
        }

        .meal-content {
            text-align: left;
            font-size: 12px;
            line-height: 1.3;
            padding: 4px;
        }

           
            .meal-content span {
                display: inline-block;
                width: 20px;
            }

        .empty-cell {
            color: #999;
            font-style: italic;
        }

        .empty-state {
            text-align: center;
            padding: 40px;
            background: white;
            border: 2px solid #455a64;
            color: #666;
            margin-top: 20px;
            border-radius: 12px;
        }

        .btn-back {
            padding: 8px 18px;
            background: #607D8B;
            color: white;
            border: none;
            border-radius: 4px;
            text-decoration: none;
            display: inline-block;
            font-size: 14px;
        }

            .btn-back:hover {
                background: #455A64;
                color: white;
                text-decoration: none;
            }

        .date-header {
            text-align: center;
            font-weight: bold;
            font-size: 14px;
            padding: 8px 0;
        }

        @@media (max-width: 768px) {
            .search-container

        {
            flex-direction: column;
            align-items: stretch;
        }

        .search-box {
            width: 100%;
            justify-content: space-between;
        }

            .search-box input {
                flex: 1;
                max-width: none;
            }

        /* 手機上表格水平滾動 */
        .bp-section table,
        .lifestyle-section table {
            display: block; 
            overflow-x: auto;
            white-space: nowrap; 
        }

            .bp-section table th,
            .bp-section table td,
            .lifestyle-section table th,
            .lifestyle-section table td {
                min-width: 80px; 
            }

        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="page-title">🔍 查詢病患健康資訊</h1>

        <div style="margin-bottom: 15px;">
            <a href="@Url.Action("Dashboard", "Home")" class="btn-back">← 返回主選單</a>
        </div>

        <div class="search-container">
            <div class="search-box">
                <label>輸入病患身分證字號：</label>
                <input type="text" id="searchIdNumber" placeholder="例:A123456789" maxlength="10" />
                <button type="button" onclick="searchPatient()">搜尋</button>
            </div>

            <div class="search-box date-filter-box" id="dateFilterBox">
                <label>日期查詢：</label>
                <input type="date" id="filterDate" />
                <button type="button" onclick="applyDateFilter()">搜尋</button>
            </div>
        </div>

        <div class="patient-info" id="patientInfo">
            <div class="patient-info-content">
                <div class="patient-info-item">
                    <span class="patient-info-label">姓名：</span>
                    <span id="patientName"></span>
                </div>
                <div class="patient-info-item">
                    <span class="patient-info-label">身分證字號：</span>
                    <span id="patientId"></span>
                </div>
                <div class="patient-info-item">
                    <span class="patient-info-label">性別：</span>
                    <span id="patientGender"></span>
                </div>
                <div class="patient-info-item">
                    <span class="patient-info-label">生日：</span>
                    <span id="patientBirthDate"></span>
                </div>
            </div>
        </div>

        <div id="recordContainer" class="record-container">
            <div id="recordsContent"></div>
            <div id="emptyState" class="empty-state" style="display: none;">
                <div style="font-size: 48px; margin-bottom: 15px;">📝</div>
                <div>此日期沒有健康資訊紀錄</div>
            </div>
        </div>
    </div>

    <script>
        let currentPatientId = null;

        function parseMeal(mealData) {
            if (!mealData) return null;
            if (typeof mealData === "object") return mealData;
            try {
                return JSON.parse(mealData);
            } catch {
                return null;
            }
        }

        function formatMealContent(mealList) {
            if (!mealList || mealList.length === 0) return '<span class="empty-cell">-</span>';

            const allVeg = [], allProtein = [], allCarbs = [];

            mealList.forEach(m => {
                const meal = parseMeal(m);
                if (meal) {
                    if (meal.vegetables && meal.vegetables !== '0') allVeg.push(meal.vegetables);
                    if (meal.protein && meal.protein !== '0') allProtein.push(meal.protein);
                    if (meal.carbs && meal.carbs !== '0') allCarbs.push(meal.carbs);
                }
            });

                    const parts = [];
        if (allVeg.length > 0) parts.push(`<span>🥬</span>: ${allVeg.join('+')}`);
        if (allProtein.length > 0) parts.push(`<span>🥩</span>: ${allProtein.join('+')}`);
        if (allCarbs.length > 0) parts.push(`<span>🍚</span>: ${allCarbs.join('+')}`);

        return parts.length > 0 ? `<div class="meal-content">${parts.join('<br>')}</div>` : '<span class="empty-cell">-</span>';

        }

        async function searchPatient() {
            const idNumber = document.getElementById('searchIdNumber').value.trim();

            if (!idNumber) {
                alert('請輸入身分證字號');
                return;
            }

            currentPatientId = idNumber;

            try {
                const response = await fetch('@Url.Action("SearchPatientRecords", "DailyHealth")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': '@Html.AntiForgeryToken()'
                    },
                    body: JSON.stringify({
                        idNumber: idNumber,
                        startDate: null,
                        endDate: null
                    })
                });

                const result = await response.json();

                if (result.success) {
                    document.getElementById('patientName').textContent = result.data.patientName;
                    document.getElementById('patientId').textContent = result.data.idNumber;
                    document.getElementById('patientGender').textContent = result.data.gender || '-';
                    document.getElementById('patientBirthDate').textContent = result.data.birthDate || '-';

                    document.getElementById('patientInfo').classList.add('show');
                    document.getElementById('dateFilterBox').classList.add('show');
                    document.getElementById('filterDate').value = '';

                    displayRecords(result.data.dailyStats);
                } else {
                    alert(result.message || '查無此病患');
                    document.getElementById('patientInfo').classList.remove('show');
                    document.getElementById('dateFilterBox').classList.remove('show');
                    document.getElementById('recordContainer').classList.remove('show');
                }
            } catch (error) {
                console.error('搜尋失敗:', error);
                alert('搜尋失敗，請稍後再試');
            }
        }

        async function applyDateFilter() {
            if (!currentPatientId) {
                alert('請先搜尋病患');
                return;
            }

            const filterDate = document.getElementById('filterDate').value;

            if (!filterDate) {
                alert('請選擇日期');
                return;
            }

            try {
                const response = await fetch('@Url.Action("SearchPatientRecords", "DailyHealth")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': '@Html.AntiForgeryToken()'
                    },
                    body: JSON.stringify({
                        idNumber: currentPatientId,
                        startDate: filterDate,
                        endDate: filterDate
                    })
                });

                const result = await response.json();

                if (result.success) {
                    displayRecords(result.data.dailyStats);
                } else {
                    alert('查詢失敗');
                }
            } catch (error) {
                console.error('查詢失敗:', error);
                alert('查詢失敗，請稍後再試');
            }
        }

        function displayRecords(dailyStats) {
            const recordContainer = document.getElementById('recordContainer');
            const recordsContent = document.getElementById('recordsContent');
            const emptyState = document.getElementById('emptyState');

            recordContainer.classList.add('show');

            if (!dailyStats || dailyStats.length === 0) {
                recordsContent.innerHTML = '';
                emptyState.style.display = 'block';
                return;
            }

            emptyState.style.display = 'none';

            recordsContent.innerHTML = dailyStats.map(dayStat => {
                const date = new Date(dayStat.date);
                const dateStr = `${date.getFullYear()}/${String(date.getMonth() + 1).padStart(2, '0')}/${String(date.getDate()).padStart(2, '0')}`;

                const bpReadings = ['第一次第一遍', '第一次第二遍', '第二次第一遍', '第二次第二遍'].map(label => {
                    if (dayStat.bloodPressure && dayStat.bloodPressure.readings) {
                        const reading = dayStat.bloodPressure.readings.find(r => r.label === label);
                        return reading ? `${Math.round(reading.systolic)}/${Math.round(reading.diastolic)}` : '';
                    }
                    return '';
                });

                const exerciseText = dayStat.exercise
                    ? dayStat.exercise.map(e => `${e.type} ${e.duration}分`).join(', ')
                    : '';

                return `
                                                    <div class="record-block">
            <div class="date-header">日期：${dateStr}</div>

            <div class="bp-section">
                <div class="section-title bp-title">722血壓測量</div>
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>第一次第一遍</th>
                            <th>第一次第二遍</th>
                            <th>第二次第一遍</th>
                            <th>第二次第二遍</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>${bpReadings[0] || '<span class="empty-cell">-</span>'}</td>
                            <td>${bpReadings[1] || '<span class="empty-cell">-</span>'}</td>
                            <td>${bpReadings[2] || '<span class="empty-cell">-</span>'}</td>
                            <td>${bpReadings[3] || '<span class="empty-cell">-</span>'}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="lifestyle-section">
                <div class="section-title lifestyle-title">生活習慣與飲食記錄</div>
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>血糖</th>
                            <th>運動</th>
                            <th>水分</th>
                            <th>飲料</th>
                            <th>早餐</th>
                            <th>午餐</th>
                            <th>晚餐</th>
                            <th>抽菸</th>
                            <th>檳榔</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>${dayStat.bloodSugar ? `${dayStat.bloodSugar}` : '<span class="empty-cell">-</span>'}</td>
                            <td>${exerciseText || '<span class="empty-cell">-</span>'}</td>
                            <td>${dayStat.water ? `${Math.round(dayStat.water)}ml` : '<span class="empty-cell">-</span>'}</td>
                            <td>${dayStat.beverage || '<span class="empty-cell">-</span>'}</td>
                            <td>${formatMealContent(dayStat.breakfast)}</td>
                            <td>${formatMealContent(dayStat.lunch)}</td>
                            <td>${formatMealContent(dayStat.dinner)}</td>
                            <td>${dayStat.cigarettes ? `${Math.round(dayStat.cigarettes)}支` : '<span class="empty-cell">-</span>'}</td>
                            <td>${dayStat.betelNut ? `${Math.round(dayStat.betelNut)}次` : '<span class="empty-cell">-</span>'}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

                                        `;
            }).join('');
        }

        document.getElementById('searchIdNumber')?.addEventListener('keypress', function (e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                searchPatient();
            }
        });

        document.getElementById('filterDate')?.addEventListener('keypress', function (e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                applyDateFilter();
            }
        });
        window.addEventListener('DOMContentLoaded', function () {
            const autoSearchId = '@ViewBag.AutoSearchIdNumber';
            if (autoSearchId && autoSearchId !== '') {
                console.log('🔍 自動搜尋個案:', autoSearchId);
                document.getElementById('searchIdNumber').value = autoSearchId;
                // 延遲 300ms 讓頁面完全載入後再搜尋
                setTimeout(() => {
                    searchPatient();
                }, 300);
            }
        });
    </script>
</body>
</html>