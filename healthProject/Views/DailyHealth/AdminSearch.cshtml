                        </div>`;
                }

                if (record.bloodSugar) {
                    dataItems += `
                        <div class="data-item">
                            <div class="data-label">🩸 血糖</div>
                            <div class="data-value">${record.bloodSugar.toFixed(1)} mg/dL</div>
                        </div>`;
                }

                return `
                    <div class="record-item">
