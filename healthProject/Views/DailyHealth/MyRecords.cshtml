        }

        .search-buttons {
            display: flex;
            gap: 0.5rem;
            flex-shrink: 0; 
        }

        .search-btn {
            white-space: nowrap; 
            min-width: 100px; 
        }

        .search-result {
            margin-top: 0.5rem;
            color: #666;
            font-size: 0.9rem;
        }


        @@media (max-width: 768px) {     
            body

        {
            font-size: 18px;
        }
      
        .page-header h1 {
            font-size: 1.8rem !important;
        }

        .page-header p {
            font-size: 1.1rem !important;
        }

        .date-title {
            font-size: 1.6rem !important;
        }

        .date-summary {
            font-size: 1.1rem !important;
        }

        .daily-summary-title {
            font-size: 1.4rem !important;
        }

        /* 記錄內容字體 */
        .record-time {
            font-size: 1.2rem !important;
        }

        .data-label {
            font-size: 1.1rem !important;
        }

