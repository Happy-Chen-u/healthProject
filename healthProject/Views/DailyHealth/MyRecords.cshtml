<body>
<div class="records-container">
    <div class="page-header">
        <h1>
            <span>📚</span>
            <span>我的健康紀錄</span>
        </h1>
        <p>查看與管理您的歷史健康資訊</p>
    </div>

    <div style="margin-bottom: 1.5rem;">
        <a href="@Url.Action("Index", "DailyHealth")" class="btn btn-secondary btn-back">
            ← 返回選單
        </a>

    </div>

    <!-- 日期搜尋欄位 -->
        <div class="search-section">
            <div class="search-wrapper">
                <div class="search-input-group">
                    <label class="search-label">
                        🔍 搜尋日期
                    </label>
                    <input type="date" id="searchDate" class="date-input" onchange="filterByDate()" />
                </div>
                <div class="search-buttons">
                    <button onclick="filterByDate()" class="btn btn-primary search-btn">
                        🔍 搜尋
                    </button>
                    <button onclick="clearSearch()" class="btn btn-secondary search-btn">
                        🔄 顯示全部
                    </button>
                </div>
            </div>
            <div id="searchResult" class="search-result"></div>
        </div>

    @if (Model != null && Model.Any())
    {
        <div id="recordsContainer">
            @foreach (var group in Model)
            {
                <div class="date-group" data-date="@group.Date.ToString("yyyy-MM-dd")">
                    <!-- 日期標題 -->
                    <div class="date-header">
                        <div class="date-title">
                            📅 @group.Date.ToString("yyyy年MM月dd日 (dddd)")
                        </div>
                        <div class="date-summary">
                            <span class="summary-item">📝 共 @group.Records.Count 筆記錄</span>
                            @if (group.TotalWater > 0)
                            {
                                <span class="summary-item">💧 @group.TotalWater.Value.ToString("0") ml</span>
                            }
                            @if (group.TotalExercise > 0)
                            {
                                <span class="summary-item">🏃 @group.TotalExercise.Value.ToString("0") 分鐘</span>
                            }
                            @if (group.AvgSystolicBP.HasValue && group.AvgDiastolicBP.HasValue)
                            {
                                <span class="summary-item">❤️ @group.AvgSystolicBP.Value.ToString("0")/@group.AvgDiastolicBP.Value.ToString("0") mmHg</span>
                            }
                        </div>
                    </div>

                    <!-- 按鈕區 (只有多筆記錄時顯示) -->
                    @if (group.Records.Count > 1)
                    {
                            <div style="padding: 1rem 2rem; background: #f8f9fa; border-bottom: 1px solid #e2e8f0; margin-bottom: 1rem;">
                                <button onclick="toggleDetails(this)" class="btn-toggle-details">
                                📋 顯示全部 @group.Records.Count 筆紀錄
                            </button>
                        </div>
                    }

                    <!-- 各筆記錄 (多筆時預設隱藏) -->
                    <div class="record-items" style="@(group.Records.Count > 1 ? "display: none;" : "")">
                        @foreach (var record in group.Records)
                        {
                            <div class="record-item">
                                <div class="record-time">
                                    ⏰ @(record.RecordTime?.ToString(@"hh\:mm") ?? "未記錄時間")
                                    <a href="@Url.Action("Edit", "DailyHealth", new { id = record.Id })" class="btn-icon btn-edit">
                                        ✏️ 編輯
                                    </a>
                                </div>

                                <div class="data-grid">
                                    <!-- 血壓 -->
                                    @if (record.BP_First_1_Systolic.HasValue || record.BP_First_1_Diastolic.HasValue ||
                                   record.BP_First_2_Systolic.HasValue || record.BP_First_2_Diastolic.HasValue ||
                                   record.BP_Second_1_Systolic.HasValue || record.BP_Second_1_Diastolic.HasValue ||
                                   record.BP_Second_2_Systolic.HasValue || record.BP_Second_2_Diastolic.HasValue)
                                    {
                                        <div class="data-item" style="grid-column: 1 / -1;">
                                            <div class="data-label">❤️ 血壓測量</div>
                                            <div class="data-value" style="line-height: 1.8;">
                                                @if (record.BP_First_1_Systolic.HasValue && record.BP_First_1_Diastolic.HasValue)
                                                {
                                                    <span>第一次第一遍: @record.BP_First_1_Systolic.Value.ToString("0")/@record.BP_First_1_Diastolic.Value.ToString("0") mmHg</span>
                                                    <br />
                                                }
                                                @if (record.BP_First_2_Systolic.HasValue && record.BP_First_2_Diastolic.HasValue)
                                                {
                                                    <span>第一次第二遍: @record.BP_First_2_Systolic.Value.ToString("0")/@record.BP_First_2_Diastolic.Value.ToString("0") mmHg</span>
                                                    <br />
                                                }
                                                @if (record.BP_Second_1_Systolic.HasValue && record.BP_Second_1_Diastolic.HasValue)
                                                {
                                                    <span>第二次第一遍: @record.BP_Second_1_Systolic.Value.ToString("0")/@record.BP_Second_1_Diastolic.Value.ToString("0") mmHg</span>
                                                    <br />
                                                }
                                                @if (record.BP_Second_2_Systolic.HasValue && record.BP_Second_2_Diastolic.HasValue)
                                                {
                                                    <span>第二次第二遍: @record.BP_Second_2_Systolic.Value.ToString("0")/@record.BP_Second_2_Diastolic.Value.ToString("0") mmHg</span>
                                                    <br />
                                                }
                                                @if (record.AvgSystolicBP.HasValue && record.AvgDiastolicBP.HasValue)
                                                {
                                                    <span style="color: #0891b2; font-weight: 600;">平均: @record.AvgSystolicBP.Value.ToString("0")/@record.AvgDiastolicBP.Value.ToString("0") mmHg</span>
                                                }
                                            </div>
                                        </div>
                                    }

                                    @if (record.Meals_Breakfast != null)
                                    {
                                        <div class="data-item">
                                            <div class="data-label">🌅 早餐</div>
                                            <div class="data-value meal-lines">
                                                @Html.Raw(record.Meals_Breakfast.ToString().Replace(", ", "<br />"))
                                            </div>
                                        </div>
                                    }

                                    @if (record.Meals_Lunch != null)
                                    {
                                        <div class="data-item">
                                            <div class="data-label">☀️ 午餐</div>
                                            <div class="data-value meal-lines">
                                                @Html.Raw(record.Meals_Lunch.ToString().Replace(", ", "<br />"))
                                            </div>
                                        </div>
                                    }

                                    @if (record.Meals_Dinner != null)
                                    {
                                        <div class="data-item">
                                            <div class="data-label">🌙 晚餐</div>
                                            <div class="data-value meal-lines">
                                                @Html.Raw(record.Meals_Dinner.ToString().Replace(", ", "<br />"))
                                            </div>
                                        </div>
                                    }

                                    @if (!string.IsNullOrEmpty(record.ExerciseType) || record.ExerciseDuration.HasValue)
                                    {
                                        <div class="data-item">
                                            <div class="data-label">🏃 運動</div>
                                            <div class="data-value">
                                                @(record.ExerciseType ?? "運動")
                                                @(record.ExerciseDuration.HasValue ? $"{record.ExerciseDuration:0.0}分鐘" : "")
                                            </div>
                                        </div>
                                    }

                                    @if (record.WaterIntake.HasValue)
                                    {
                                        <div class="data-item">
                                            <div class="data-label">💧 水分攝取</div>
                                            <div class="data-value">@record.WaterIntake.Value.ToString("0") ml</div>
                                        </div>
                                    }

                                    @if (!string.IsNullOrEmpty(record.Beverage))
                                    {
                                        <div class="data-item">
                                            <div class="data-label">🥤 飲料</div>
                                            <div class="data-value">@record.Beverage</div>
                                        </div>
                                    }

                                    @if (record.Cigarettes.HasValue && record.Cigarettes > 0)
                                    {
                                        <div class="data-item">
                                            <div class="data-label">🚬 抽菸</div>
                                            <div class="data-value">@record.Cigarettes.Value.ToString("0") 支</div>
                                        </div>
                                    }

                                    @if (record.BetelNut.HasValue && record.BetelNut > 0)
                                    {
                                        <div class="data-item">
                                            <div class="data-label">🌿 檳榔</div>
                                            <div class="data-value">@record.BetelNut.Value.ToString("0") 次</div>
                                        </div>
                                    }

                                    @if (record.BloodSugar.HasValue)
                                    {
                                        <div class="data-item">
                                            <div class="data-label">🩸 血糖</div>
                                            <div class="data-value">@record.BloodSugar.Value.ToString("0.0") mg/dL</div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>

                    <!-- 今日統計 (永遠顯示,不受按鈕控制) -->
                    @if (group.Records.Count > 1)
                    {
                        <div class="daily-summary" style="margin: 0 1.5rem 1.5rem 1.5rem;">
                            <div class="daily-summary-title">📊 今日統計</div>
                            <div class="data-grid">
                                @if (group.TotalWater > 0)
                                {
                                    <div class="data-item">
                                        <div class="data-label">💧 總水分攝取</div>
                                        <div class="data-value">@group.TotalWater.Value.ToString("0") ml</div>
                                    </div>
                                }
                                @if (group.TotalExercise > 0)
                                {
                                    <div class="data-item">
                                        <div class="data-label">🏃 總運動時間</div>
                                        <div class="data-value">@group.TotalExercise.Value.ToString("0") 分鐘</div>
                                    </div>
                                }
                                @if (group.AvgSystolicBP.HasValue && group.AvgDiastolicBP.HasValue)
                                {
                                    <div class="data-item">
                                        <div class="data-label">❤️ 平均血壓</div>
                                        <div class="data-value">
                                            @group.AvgSystolicBP.Value.ToString("0")/@group.AvgDiastolicBP.Value.ToString("0") mmHg
                                        </div>
                                    </div>
                                }
                                @if (group.AvgBloodSugar.HasValue)
                                {
                                    <div class="data-item">
                                        <div class="data-label">🩸 平均血糖</div>
                                        <div class="data-value">@group.AvgBloodSugar.Value.ToString("0.0") mg/dL</div>
                                    </div>
                                }
                                @if (group.TotalCigarettes > 0)
                                {
                                    <div class="data-item">
                                        <div class="data-label">🚬 總抽菸量</div>
                                        <div class="data-value">@group.TotalCigarettes.Value.ToString("0") 支</div>
                                    </div>
                                }
                                @if (group.TotalBetelNut > 0)
                                {
                                    <div class="data-item">
                                        <div class="data-label">🌿 總檳榔量</div>
                                        <div class="data-value">@group.TotalBetelNut.Value.ToString("0") 次</div>
                                    </div>
                                }
                                @if (group.HasAnyMeals)
                                {
                                    <div class="data-item" style="grid-column: 1 / -1;">
                                        <div class="data-label">🍽️ 今日三餐總計</div>
                                        <div class="data-value" style="font-size: 0.9rem; line-height: 1.8;">
                                            @if (!string.IsNullOrEmpty(group.TotalVegetables.Display) && group.TotalVegetables.Display != "0")
                                            {
                                                <div>🥬 蔬菜:@group.TotalVegetables.Display</div>
                                            }
                                            @if (!string.IsNullOrEmpty(group.TotalProtein.Display) && group.TotalProtein.Display != "0")
                                            {
                                                <div>🥩 蛋白質:@group.TotalProtein.Display</div>
                                            }
                                            @if (!string.IsNullOrEmpty(group.TotalCarbs.Display) && group.TotalCarbs.Display != "0")
                                            {
                                                <div>🍚 澱粉:@group.TotalCarbs.Display</div>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon">📝</div>
            <div class="empty-text">目前還沒有任何健康紀錄</div>
            <a href="@Url.Action("Create", "DailyHealth")" class="btn-primary">
                ➕ 新增第一筆紀錄
            </a>
        </div>
    }
</div>

<script>
    // 切換詳細記錄顯示/隱藏
    function toggleDetails(button) {
        const dateGroup = button.closest('.date-group');
        const recordItems = dateGroup.querySelector('.record-items');
        const isHidden = recordItems.style.display === 'none';

        if (isHidden) {
            // 顯示詳細記錄
            recordItems.style.display = 'block';
            button.textContent = '📋 隱藏詳細記錄';
            button.classList.add('active');
        } else {
            // 隱藏詳細記錄
            recordItems.style.display = 'none';
            const count = recordItems.querySelectorAll('.record-item').length;
            button.textContent = `📋 顯示全部 ${count} 筆紀錄`;
            button.classList.remove('active');
        }
    }

    // 日期搜尋功能
    function filterByDate() {
        const searchDate = document.getElementById('searchDate').value;
        const dateGroups = document.querySelectorAll('.date-group');
        const resultDiv = document.getElementById('searchResult');

        if (!searchDate) {
            resultDiv.innerHTML = '<span style="color: #f59e0b;">⚠️ 請選擇日期</span>';
            return;
        }

        let foundCount = 0;
        dateGroups.forEach(group => {
            const groupDate = group.getAttribute('data-date');
            if (groupDate === searchDate) {
                group.style.display = 'block';
                foundCount++;
            } else {
                group.style.display = 'none';
            }
        });

        if (foundCount > 0) {
            resultDiv.innerHTML = `<span style="color: #10b981;">✓ 找到 ${foundCount} 個日期的記錄</span>`;
        } else {
            resultDiv.innerHTML = '<span style="color: #ef4444;">✗ 該日期沒有記錄</span>';
        }
    }

    // 清除搜尋,顯示全部
    function clearSearch() {
        document.getElementById('searchDate').value = '';
        document.getElementById('searchResult').innerHTML = '';

        const dateGroups = document.querySelectorAll('.date-group');
        dateGroups.forEach(group => {
            group.style.display = 'block';
        });
    }
</script>
</body>
